//Setup the `index.handlebars` to have the template that Handlebars can render onto.
//Create a button in `index.handlebars` that will submit the user input into the database.

<h1>Burgers!</h1>

<h2>New Order</h2>

<ul>
  {{#each burgers}}
    {{#unless devoured}}
      {{partials/burger devoured=true}}
    {{/unless}}
  {{/each}}
</ul>

<h2>Devoured Burgers</h2>

<ul>
  {{#each burgers}}
    {{#if devoured}}
      {{partials/burger devoured=false}}
    {{/if}}
  {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="name">
  </div>

  <div class="form-group">
    <label for="slee">Devoured?</label><br>
    <input type="radio" name="sleepy" value="1" checked> New order<br>
    <input type="radio" name="sleepy" value="0"> Eaten
  </div>

  <button type="submit">Add Burger</button>
</form>
